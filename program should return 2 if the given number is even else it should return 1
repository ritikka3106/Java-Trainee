public class EvenChecker {
    public static int checkEven(int number) {
        if (number % 2 == 0) {
            return 2; // Even number
        } else {
            return 1; // Odd number
        }
    }

    public static void main(String[] args) {
        int number = 10;
        int result = checkEven(number);
        System.out.println("Result: " + result);
    }
}
